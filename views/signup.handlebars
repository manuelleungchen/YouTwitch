<link rel="stylesheet" href="css/signUp.css">
<header>
    <nav id="nav" class="row blue darken-2">
        <div class="col s12 m12 l3">
            <a href="#" class="sidenav-trigger hide-on-large-only left" data-target="nav-mobile">
                <i class="material-icons black-text">menu</i>
            </a>
            <a href="#" class="brand-logo">
                <div id="logo">
                    <img src="./images/YouTwitch.png" alt="">
                    <span class="black-text">YouTwitch</span>
                </div>
            </a>
        </div>
</header>


<div class="container">
    <div class="child row">
        <form class="signup col s12">
            <h3 class="upText">Sign Up Form</h3>
            <div class="input-field col s6">
                <i class="tiny material-icons">email</i>
                <input type="email" class="" id="email-input" placeholder="Email">
            </div>
            <div class="input-field col s6">
                <i class="tiny material-icons">lock</i>
                <input type="password" class="" id="password-input" placeholder="Password">
            </div>
            <div class="col s12">
                <button type="submit" class="col s2 waves-effect blue darken-2 btn" id="signUp" style="padding: 2px; margin:5px;">Sign Up</button>
                <p class="s1 text" style="margin: 2px;">or log in <a href="/">here</a></p>
            </div>
        </form>
    </div>
</div>

<footer class="footer">
    @YouTwitch 2021
</footer>

<script src="/js/signup.js"></script>