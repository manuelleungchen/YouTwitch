<link rel="stylesheet" href="./css/style.css">
<header>
    <nav id="nav" class="row blue darken-2">
        <div class="col s12">
            <a href="#" class="brand-logo">
                <div id="logo">
                    <img src="./images/YouTwitch.png" alt="">
                    <span class="black-text">YouTwitch</span>
                </div>
            </a>
        </div>
</header>

    <article class='row login'>
        <form id='login_form' class='col s12'>
            <h2>Login</h2>
            <div class="row">
                <div class="input-field col s12">
                    <label for='login_input_email'>Email:</label>
                    <input type="email" id='login_input_email' placeholder="Enter email here..." />
                </div>
            </div>
            <label for='login_input_password'>Password:</label>
            <input type="password" id='login_input_password' placeholder="Enter password here..." />
            <button id="submitBtn" class="blue darken-2 btn">Submit</button>
            <p id="sign-up" style="padding-top: 10px;">Don't have an account? <a href="/signup">Sign up</a></p>
        </form>
    </article>

<footer class="footer">
    @YouTwitch 2021
</footer>

<script src="./js/login.js"></script>