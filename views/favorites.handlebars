<link rel="stylesheet" href="/css/members.css">

<header>
    <nav id="nav" class="row blue darken-2">
        <div class="col s12 m12 l3">
            <a href="#" class="sidenav-trigger hide-on-large-only left" data-target="nav-mobile">
                <i class="material-icons black-text">menu</i>
            </a>
            <a href="/members" class="brand-logo">
                <div id="logo">
                    <img src="/images/YouTwitch.png" alt="YouTwitch Logo">
                    <span class="black-text">YouTwitch</span>
                </div>
            </a>
        </div>
        <div class="col s12 m12 l5">
            <form>
                <div id="searchBarDiv">
                    <input id="search" class="darkModeOFF" type="search" required placeholder="Search">
                    <button type="submit" class="transparent"><i
                            class="material-icons grey-darken-3-text">search</i></button>
                </div>
            </form>
        </div>

        <div class="col s12 m12 l4">
            <ul class="right hide-on-med-and-down" id="navLinks">
                <li>
                    <!-- Switch -->
                    <div class="switch">
                        <label class="black-text">
                            Dark Mode
                            <input type="checkbox" id="navToogle">
                            <span class="lever"></span>
                        </label>
                    </div>
                </li>
                <li><a class="black-text" id='favorites'>Favorites</a></li>
                <li><a href="logout" class="black-text">Logout</a></li>
            </ul>
            <ul id="nav-mobile" class="sidenav">
                <li>
                    <h5 class="black-text">Signed as:</h5>
                </li>
                <li>
                    <h6 class="black-text member-name"></h6>
                </li>
                <li>
                    <!-- Switch -->
                    <div class="switch">
                        <label class="black-text">
                            Dark Mode
                            <input type="checkbox" id="sidebarToggle">
                            <span class="lever"></span>
                        </label>
                    </div>
                </li>
                <li><a class="black-text" id='favorites'>Favorites</a></li>
                <li><a href="logout" class="black-text">Logout</a></li>
            </ul>
        </div>
    </nav>
</header>

<div class="container">
    <div class="row">
        {{#if link}}
        {{#each link}}
        {{> videos/favorites-block}}

        <!-- Modal Structure -->
        <div id="{{@index}}" class="modal transparent" style="width: 90% ; height: 100% ;">
            <div class="modal-content">
                <iframe src="{{this.frameSrc}}" height="500" width="100%" allowfullscreen="true"
                    class='iframe'></iframe>
            </div>
        </div>
        {{/each}}
        {{/if}}

    </div>
</div>

{{!-- JQuery --}}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/js/favorites.js"></script>